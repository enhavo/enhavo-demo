{% if navigation %}
    {% if navigation.code == 'main_nav' %}
        <div class="container">
            <nav class="main-menu">
                <div class="menu-btn" data-mobile-menu-toggle>
                    <div>
                        <span></span>
                        <span></span>
                        <span></span>
                    </div>
                </div>
                <a href="/" class="logo">ACME</a>
                <ul class="menu-items" data-menu-items>
                    {% for node in navigation.nodes %}
                        <li>{% include 'theme/navigation/type-chooser.html.twig' with {'node': node} %}</li>
                    {% endfor %}
                </ul>
            </nav>
        </div>
    {% elseif navigation.code == 'footer' %}
        <ul class="menu-items" data-menu-items>
            {% for node in navigation.nodes %}
                <li>{% include 'theme/navigation/type-chooser.html.twig' with {'node': node} %}</li>
            {% endfor %}
        </ul>
    {% endif %}
{% endif %}
