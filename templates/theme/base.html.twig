<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0">

    {% block meta %}{% endblock %}

    {% block stylesheets %}
        {{ encore_entry_link_tags('base', null, 'theme') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('base', null, 'theme') }}
    {% endblock %}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.cdnfonts.com/css/source-sans-pro" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&family=Inter:wght@100..900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Source+Sans+3:ital,wght@0,200..900;1,200..900&display=swap" rel="stylesheet">
    <script id="routes" type="application/json">{{ routes|json_encode|raw }}</script>
</head>
<body>
{% block body %}
    {% block header %}
        <header data-controller="sub-menu" data-sub-menu-target="header">
            <div class="nav">
                <div class="theme-container">
                    <div class="navbar-grid">
                        <div class="header-img">
                            <a href="#" class="logo-paw-link"><img src="{{ asset('build/theme/images/pfote.svg')}}" alt="nav_img" class="paw-logo" /></a>
                            <a href="#" class="logo-link"><img src="{{ asset('build/theme/images/logo.svg') }}" alt="nav_img" class="text-logo" /></a>
                        </div>
                        {% include 'theme/navigation/main.html.twig' %}
                    </div>
                </div>
            </div>
        </header>
    {% endblock %}
    <main>
        <div class="block-main">
            {% block main %}{% endblock %}
        </div>
    </main>
    {% block footer %}
    <footer>
        <div class="theme-container">
            <a href="#" class="contact-row">
                <div class="left">
                    <div class="label theme-headline">logo</div>
                    <div>copyright</div>
                </div>
                <div class="right">
                    <div class="label">DATENSCHUTZ</div>
                    <div class="middle-space">IMPRESSUM</div>
                    <div>AGB</div>
                </div>

            </a>
        {% include 'theme/navigation/footer.html.twig' %}
    </footer>
    {% endblock %}
{% endblock %}
</body>
</html>
