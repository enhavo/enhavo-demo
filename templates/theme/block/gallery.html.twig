<div class="block-gallery space-top">
    <div class="theme-container">
        <div class="{% if block.layout == "black" %}black-wrapper {% endif %}">
            <div class="{{ block.layout }}-grid">
                {% if block.layout == "gallery" %}
                    {% for block in block.items %}
                        <div class=" item_2">
                            <img src="{{ media_url(block.media) }}" alt="{{ media_parameter(block.media, 'alt') }}" class="gallery-img">
                        </div>
                    {% endfor %}
                {% endif %}
                <div class="text-container">
                    <span class="headline">{% if block.layout == "black" %}{{ block.headline }}{% endif %}</span>
                    <div class="copy">{% if block.layout == "black" %}{{ block.copy }}{% endif %} </div>
                </div>
                <img src="{{ asset('/build/theme/images/x-button.png') }}" alt="x-btn" class="x-button">
                <div class="prev-button">
                    <img src="{{ asset('/build/theme/images/prev-btn.png') }}" alt="prev-btn">
                </div>
                <div class="image-container">
                    <img src="{% if block.layout == "black" %}{{ media_url(block.media) }}{% endif %}" alt="{% if block.layout == "black" %}{{ media_parameter(block.media, 'alt') }}{% endif %}" class="">
                </div>
            </div>
        </div>
    </div>
</div>

