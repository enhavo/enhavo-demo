{# Template for container block content_flex_block #}
{#{{ dump(block) }}#}
<div class="block-about">
    <div class="container">
        {% if block.layout == "cards" %}
            <div class="block-container">
                {% for block in block.items %}
                    <div class="block-image">
                        <img src="{{ media_url(block.media) }}" alt="{{ media_parameter(block.media, 'alt') }}">
                        <div class="texts_container">
                            <div class="content_flex-overline">{{ block.overline }}</div>
                            <div class="content_flex-headline">{{ block.headline }}</div>
                            <div class="content_flex-copy">{{ block.copy }}</div>
                            <div class="card_button_1">{{ block.ctaTitle }}</div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
        {% if block.layout == "list" %}
            <div class="content_flex-container-grid">
                {% for block in block.items %}
                    <div class="content-flex-img-wrapper">
                        <img src="{{ media_url(block.media) }}" alt="{{ media_parameter(block.media, 'alt') }}" >
                        <div class="content_flex-texts_container">
                            <div class="content_flex-overline">{{ block.overline }}</div>
                            <div class="content_flex-headline">{{ block.headline }}</div>
                            <div class="content_flex-copy">{{ block.copy }}</div>
                            <div class="card_button_1">{{ block.ctaTitle }}</div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
</div>
