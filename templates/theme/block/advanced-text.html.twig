{# Template for container block advanced_text_block #}
{#{{ dump(block) }}#}
<div class="advance-text-block">
    <div class="container">
        <div class="advanced-text-grid">
            {% if block.layout == 'headline-breaker' %}
                <div class="advanced-text-container">
                    <div class="overline">{{ block.overline }}</div>
                    <div class="headline">{{ block.headline }}</div>
                    <div class="copy">{{ block.copy }}</div>
                    <a class="card_button_1"  href="{{ block.ctaLink }}" target="{{ block.ctaTarget }}">{{ block.ctaTitle }}</a>
                </div>
            {% endif %}

            {% if block.layout == 'text-big' %}
                <div class="advanced-text-text-big">
                    <div class="overline">{{ block.overline }}</div>
                    <div class="headline">{{ block.headline }}</div>
                    <div class="advanced-text-big-copy">{{ block.copy }}</div>
                    <a class="card_button_1"  href="{{ block.ctaLink }}" target="{{ block.ctaTarget }}">{{ block.ctaTitle }}</a>
                </div>
            {% endif %}

            {% if block.layout == 'one-column' %}
                <div class="advanced-text-one-column">
                    <div class="overline">{{ block.overline }}</div>
                    <div class="headline">{{ block.headline }}</div>
                    <div class="copy">{{ block.copy }}</div>
                    <a class="card_button_1"  href="{{ block.ctaLink }}" target="{{ block.ctaTarget }}">{{ block.ctaTitle }}</a>
                </div>
            {% endif %}

            {% if block.layout == 'two-column-wide' %}
                <div class="advanced-text-two-column-wide">
                    <div class="overline">{{ block.overline }}</div>
                    <div class="headline">{{ block.headline }}</div>
                    <div class="copy">{{ block.copy }}</div>
                    <a class="card_button_1"  href="{{ block.ctaLink }}" target="{{ block.ctaTarget }}">{{ block.ctaTitle }}</a>
                </div>
            {% endif %}

            {% if block.layout == 'two-column' %}
                <div class="advanced-text-two-column">
                    <div class="overline">{{ block.overline }}</div>
                    <div class="headline">{{ block.headline }}</div>
                    <div class="copy">{{ block.copy }}</div>
                </div>
                <div class="column">
                        <div class="copy">{{ block.copy }}</div>
                    <div class="two-button">
                        <a class="card_button_1" href="{{ block.ctaLink }}" target="{{ block.ctaTarget }}">{{ block.ctaTitle }}</a>
                    </div>

                </div>
            {% endif %}
        </div>
    </div>
</div>

