{# Template for container block advanced_text_block #}
{#{{ dump(block) }}#}
<div class="advance-text-block">
    <div class="container">
        <div class="advanced-text-grid">
            {% if block.layout == 'headline-breaker' %}
                <div class="advanced-text-container">
                    <div class="advanced-text-overline">{{ block.overline }}</div>
                    <div class="advanced-text-caps-headline">{{ block.headline }}</div>
                    <div class="advanced-text-copy">{{ block.copy }}</div>
                    <div class="card_button_1">{{ block.ctaTitle }}</div>
                </div>
            {% endif %}

            {% if block.layout == 'text-big' %}
                <div class="advanced-text-text-big">
                    <div class="advanced-text-big-overline">{{ block.overline }}</div>
                    <div class="advanced-text-big-headline">{{ block.headline }}</div>
                    <div class="advanced-text-big-copy">{{ block.copy }}</div>
                    <div class="card_button_1">{{ block.ctaTitle }}</div>
                </div>
            {% endif %}

            {% if block.layout == 'one-column' %}
                <div class="advanced-text-one-column">
                    <div class="advanced-text-overline">{{ block.overline }}</div>
                    <div class="advanced-text-headline">{{ block.headline }}</div>
                    <div class="advanced-text-copy">{{ block.copy }}</div>
                    <div class="card_button_1">{{ block.ctaTitle }}</div>
                </div>
            {% endif %}

            {% if block.layout == 'two-column-wide' %}
                <div class="advanced-text-two-column-wide">
                    <div class="advanced-text-overline">{{ block.overline }}</div>
                    <div class="advanced-text-headline">{{ block.headline }}</div>
                    <div class="advanced-text-copy">{{ block.copy }}</div>
                    <div class="card_button_1">{{ block.ctaTitle }}</div>
                </div>
            {% endif %}

            {% if block.layout == 'two-column' %}
                <div class="advanced-text-two-column">
                    <div class="advanced-text-overline">{{ block.overline }}</div>
                    <div class="advanced-text-headline">{{ block.headline }}</div>
                    <div class="advanced-text-copy">{{ block.copy }}</div>
                </div>
                <div class="column">
                        <div class="advanced-text-copy">{{ block.copy }}</div>
                    <div class="two-button">
                        <div class="two-column-button">{{ block.ctaTitle }}</div>
                    </div>

                </div>
            {% endif %}
        </div>
    </div>
</div>

