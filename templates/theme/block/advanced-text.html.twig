<div class="block-advance-text space-top">
    <div class="theme-container">
        <div class="grid">
            <div class="{{ block.layout }}">
                <div class="theme-overline">{{ block.overline }}</div>
                <div class="theme-headline padding headline">{{ block.headline }}</div>
                <div class="text-container">
                    {% if block.copy is iterable %}
                        {% for text in block.copy %}
                            <div class="text">{{ text }}</div>
                        {% endfor %}
                    {% else %}
                        <div class="copy">{{ block.copy }}</div>
                    {% endif %}
                </div>
                <div class="button-container two-column-btn">
                    <a class="theme-cta theme-button"  href="{{ block.ctaLink }}" target="{{ block.ctaTarget }}">{{ block.ctaTitle }}</a>
                </div>
            </div>
        </div>
    </div>
</div>