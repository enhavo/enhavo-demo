{% import "theme/macros.html.twig" as macros %}
<div class="block-article-teaser">
    <div class="title">Article Teaser</div>
    <div class="flex">
        <div class="article-image">{{ macros.imageLazyLoadDefault(block.article.picture, 'block_article_teaser') }}</div>
        <div class="article-content">
            <div class="date">{{ block.article.publicationDate|date('d.m.y') }}</div>
            <div class="headline">{{ block.article.title|raw }}</div>
            <div class="teaser">{{ block.article.teaser|raw }}</div>
            <a href="{{ router(block.article) }}" class="btn">Read more</a>
        </div>
    </div>
</div>
