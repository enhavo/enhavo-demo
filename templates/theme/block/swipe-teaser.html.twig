    <div class="theme-container" >
        <div class="grid" data-swiper-teaser-target="slide" >
                <div class="media-wrapper" >
                    <img src="{{ media_url(block.media) }}" alt="{{ media_parameter(block.media,'alt')}}" class="media-gradient">
                </div>
                <div class="media-wrapper">
                    <img src="{{ media_url(block.media) }}" alt="{{ media_parameter(block.media,'alt')}}" class="media">
                </div>
                <div class="text-wrapper">
                    <div class="text-container">
                        <div class="theme-overline">{{ block.overline|html_sanitize }}</div>
                        <div class="theme-headline padding">{{ block.headline|html_sanitize }}</div>
                        <div class="copy">{{ block.copy }}</div>
                    </div>
                </div>
                <div class="media-wrapper">
                    <img src="{{ media_url(block.media) }}" alt="{{ media_parameter(block.media,'alt')}}" class="media-gradient">
